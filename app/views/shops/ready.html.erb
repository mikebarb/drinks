<h1 id="readyorders" style="display: none;">Orders ready for pickup</h1>
<div id="statusSelect"  style="display: none;">
  <% @statusList.each do |sl| %>
    <input id=<%= sl %> type="checkbox" checked onclick="selectStatus();" > <%= sl %>
  <% end %>
</div>
<% scrollText = "" %>
<table>
  <tbody id="orders">
    <% @orders.each do |order| 
         if order.status == "ready" then %>
          <tr id=<%= order.id %>>
            <td style="display: none;"><%= order.id %></td>
            <td><%= order.person.name %></td>
            <td style="display: none;"><%= order.drink %></td>
            <td style="display: none;"><%= order.quantity %></td>
            <td style="display: none;"><%= order.status %></td>
          </tr>
          <% scrollText = scrollText + "   " + order.person.name %>
    <%   end 
    end %>
  </tbody>
</table>

<% scrollText = scrollText + "--1--" + scrollText + "--2--" + scrollText %> 

