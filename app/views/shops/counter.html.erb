<p id="notice"><%= notice %></p>

<h1>Place your drink orders</h1>

<div class="displaybox floating-box">
    <h2 id=myPersonName>Name: </h2>
    <h2 id=myPersonId style="display: none;"></h2>
</div>
<div class="displaybox floating-box">
    <h2 id=myDrinkName>Drink: </h2>
    <h2 id=myDrinkId style="display: none;"></h2>
</div>
<div class="floating-box-button">
    <div id="submitOrder" class="button" onclick="counterSubmitOrder();" style="display: none;">Submit this order</div>
    <hr class=seperator />
</div>

<div class="selectbox floating-box">
    <span class="myrowleft">
        <h2>Select person</h2>
    </span>
    <span class="myrowright">
        <div id="buttonAddPerson" class="hideme" onclick="counterAddPerson();">New Person</div>
    </span>
    <input type="text" id="personInput" autocomplete="off" onkeyup="counterFilterPeople()" placeholder="Shorten displayed names by keying in meaningful characters .." title="Type in characters to reduce name list">
    <div id="showAdd" onclick="counterAddPerson();" style="display: none;">Add this Person</div>
    <ul id="myPeopleUL">
        <% @people.each do |person| %>
            <% if person.lastdrinkid then %> 
                <li id=<%= person.id %> lastdrink="<%= person.lastdrinkid %>" onclick="counterSelectPerson(this);"><%= person.name %></li>
            <% else %>
                <li id=<%= person.id %> onclick="counterSelectPerson(this);"><%= person.name %></li>
            <% end %>
        <% end %>
    </ul>
</div>

<div class="selectbox floating-box">
    <h2>Select drink</h2>
    
    <input type="text" id="drinkInput" class="filter" autocomplete="off" onkeyup="counterDrinks()" placeholder="Filter drink list .." title="Type in characters to reduce drink list">
    
    <ul id="myDrinksUL">
        <% @drinks.each do |drink| %>
            <li id=<%= "d" + drink.id.to_s %> onclick="counterSelectDrink(this);"><%= drink.name %></li>
        <% end %>
    </ul>
</div>

<div class="selectbox floating-box">
    <h2>Select drink with buttons</h2>
    

    <div class="displaybox floating-box2">
        <h2 id=myDrinkId2></h2>
    </div>

    <div id="drinkarea" class="grpdrinkarea">
    
        <div id="grpDrinks" class="grpdrinkbutton">
          Drink
          <button class="drinkbutton" data-enable="b11, b12, b21, b23">Cap</button>
          <button class="drinkbutton" data-enable="b11, b12, b21, b23">Flat White</button>
          <button class="drinkbutton" data-enable="b11, b12, b21, b23">Latte</button>
          <button class="drinkbutton" data-enable="b11, b12, b21, b23, b61">Long Black</button>
          <button class="drinkbutton" data-enable="b21, b22">Choc</button>
          <button class="drinkbutton" data-enable="b31, b32, b33">Tea</button>
          <button class="drinkbutton" data-enable="b22, b24">Water</button>
          <button id="other" class="drinkbutton" data-enable="otherInput">Other</button>
        </div>
     
        <div id="grpoptionsgroups" class="grpoptionsgroups">

            <div id="grpoptions" class="grpoptionsbutton">
              Strength
              <button id="b11" class="optionsbutton">half</button>
              <button id="b12" class="optionsbutton">quarter</button>
            </div>
    
            <div id="grpoptions" class="grpoptionsbutton">
               Temperature
              <button id="b21" class="optionsbutton">extra hot</button>
              <button id="b22" class="optionsbutton">hot</button>
              <button id="b23" class="optionsbutton">warm</button>
              <button id="b24" class="optionsbutton">cold</button>
            </div>
    
            <div id="grpoptions" class="grpoptionsbutton">
              Blend
              <button id="b31" class="optionsbutton">Dilmah</button>
              <button id="b32" class="optionsbutton">English Breakfast</button>
              <button id="b33" class="optionsbutton">Decafe</button>
            </div>
    
            <div id="grpoptions" class="grpoptionsbutton">
              Misc
              <button id="b61" class="optionsbutton">Cold Milk</button>
              <button id="b62" class="optionsbutton">Sugar</button>
            </div>
            <div id="grpoptions" class="grpoptionsbutton">
              Other
              <input id="otherInput" class="optionsbutton" type="text" placeholder="Type in your drink description" title="Drink Description">
            </div>
        </div>

    </div>    
</div>

<div id="submitOrder" class="button" onclick="counterSubmitOrder();" style="display: none;">Submit this order</div>







